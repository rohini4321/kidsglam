    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List</h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <input type="text" placeholder="Search order ID" class="form-control bg-white">
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Order ID</th>
                                    <th>Products Name</th>
                                    <th>Image</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Product Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th>Grand Total</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach((order, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= order._id %></td>
                                        <td>
                                            <% order.products.forEach((product, idx) => { %>
                                                <%= product.productName %><br>
                                            <% }); %>
                                        </td>
                                        <td>
                                            <% order.products.forEach((product, idx) => { %>
                                                <img src="/uploads/<%= product.productId.image %>" alt="<%= product.productId.productName %>" width="50">
                                            <% }); %>
                                        </td>
                                        <td><%= new Date(order.createdOn).toDateString() %></td>
                                        <td id="status-<%= order._id %>"><%= order.orderStatus %></td>
                                        <td>
                                            <% let totalPrice = 0; %>
                                            <% order.products.forEach((product, idx) => { %>
                                                <%= product.price %><br>
                                                <% totalPrice += product.price; %>
                                            <% }); %>
                                        </td>
                                        <td>
                                            <% order.products.forEach((product, idx) => { %>
                                                <%= product.quantity %><br>
                                            <% }); %>
                                        </td>
                                        <td>
                                            <% order.products.forEach((product, idx) => { %>
                                                <%= product.subtotal %><br>
                                            <% }); %>
                                        </td>
                                        <td><%= order.billTotal %></td>
                                        <td class="text-end">
                                            <button class="btn btn-light rounded btn-sm change-status-btn" data-order-id="<%= order._id %>">
                                                Change Status
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
